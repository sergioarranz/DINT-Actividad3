<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <!-- Tema Fragmento 1 -->
    <style name="MainActivityFragmentTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorButton</item>
        <item name="android:background">@color/fondo1</item>
        <item name="android:textColorPrimary">@color/fondo2</item>
        <item name="android:textColor">@color/fondo2</item>
        <item name="android:typeface">monospace</item>
    </style>
    <!-- Tema Fragmento 2 -->
    <style name="Fragment2Theme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:background">@color/fondo2</item>
        <item name="android:textColorPrimary">@color/fondo1</item>
        <item name="android:textColor">@color/fondo1</item>
        <item name="android:typeface">monospace</item>
    </style>
    <!-- Tema Fragmento 3 -->
    <style name="Fragment3Theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorButton2</item>
        <item name="android:background">@color/fondo3</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
